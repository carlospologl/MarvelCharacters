<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characters_navigation"
    app:startDestination="@id/charactersListFragment">

    <fragment
        android:id="@+id/charactersListFragment"
        android:name="com.manimal.marvelcharacters.features.characters.list.CharactersListFragment"
        android:label="fragment_characters_list"
        tools:layout="@layout/fragment_characters_list" >
        <action
            android:id="@+id/to_charactersDetailFragment"
            app:destination="@id/charactersDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/charactersDetailFragment"
        android:name="com.manimal.marvelcharacters.features.characters.detail.CharacterDetailFragment"
        android:label="fragment_characters_detail"
        tools:layout="@layout/fragment_character_detail" >
        <argument
            android:name="character_id"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>