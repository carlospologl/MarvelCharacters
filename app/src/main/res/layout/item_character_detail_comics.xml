<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_item_character_detail_comics_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/character_comics_item_p"
        android:textSize="@dimen/character_comics_item_ts"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/vw_item_characters_list_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:paddingHorizontal="@dimen/character_comics_item_p"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>