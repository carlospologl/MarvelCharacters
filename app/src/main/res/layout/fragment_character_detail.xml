<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.characters.detail.CharacterDetailFragment">

    <ImageView
        android:id="@+id/iv_character_detail_image"
        android:layout_width="@dimen/character_detail_image_width"
        android:layout_height="@dimen/character_detail_image_height"
        android:contentDescription="@string/content_description_hero_s_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_character_detail_name"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/character_text_mh"
        android:textSize="@dimen/character_name_ts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_character_detail_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hero's Name" />

    <TextView
        android:id="@+id/tv_character_detail_description"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/character_text_mh"
        android:textSize="@dimen/character_description_ts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_character_detail_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_character_detail_name"
        tools:text="Hero's Description" />

    <TextView
        android:id="@+id/tv_character_detail_last_modified"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/character_text_mh"
        android:text="@string/character_detail_fragment_last_modification"
        android:textSize="@dimen/character_description_ts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_character_detail_image" />

    <TextView
        android:id="@+id/tv_character_detail_last_modified_value"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/character_text_mh"
        android:textSize="@dimen/character_description_ts"
        app:layout_constraintStart_toEndOf="@+id/tv_character_detail_last_modified"
        app:layout_constraintTop_toBottomOf="@+id/iv_character_detail_image"
        tools:text="2013-10-17 14:41" />

    <TextView
        android:id="@+id/tv_character_detail_comics_title"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/character_text_mh"
        android:text="@string/character_detail_fragment_comics_title"
        android:textSize="@dimen/character_description_ts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_character_detail_last_modified" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_character_detail_comics"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_character_detail_comics_title"
        tools:itemCount="4"
        tools:listitem="@layout/item_character_detail_comics" />

</androidx.constraintlayout.widget.ConstraintLayout>